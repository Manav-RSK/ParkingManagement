<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_yellow"
    android:orientation="vertical"
    tools:context=".PersonalDetails">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="-15dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_green"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Update Details"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <!-- Add Spinner Here -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Name"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="text"
                    android:textColor="#FEFEFE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textUid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="UID"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edt_uid"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Uid"
                    android:inputType="text"
                    android:textColor="#FEFEFE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextSem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Semester"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerSemester"
                    android:layout_width="110dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/TextGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Group"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerGroup"
                    android:layout_width="110dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TxtCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Course"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerCourse"
                    android:layout_width="110dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/TxtBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Branch"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerBranch"
                    android:layout_width="110dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textCgpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="Current CGPA"
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/CgpaVal"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="CGPA"
                    android:inputType="numberDecimal"
                    android:textColor="#FEFEFE" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_update_personal"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#353434"
                android:text="Update"
                android:textColor="#FEFEFE"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Total teachers : "
                    android:textColor="#FEFEFE"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerT"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/teacher_numbers" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerLayoutT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"></LinearLayout>

            <EditText
                android:id="@+id/edt_mentor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:hint="Mentor's name"
                android:textColor="#FEFEFE" />

            <Button
                android:id="@+id/btn_update_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#353434"
                android:text="Update"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Total subjects :"
                    android:textColor="#FEFEFE" />

                <Spinner
                    android:id="@+id/spinnerS"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/teacher_numbers" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/containerLayoutS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/btn_update_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:backgroundTint="#353434"
                android:text="Update"
                android:textColor="#FEFEFE"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="5dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>